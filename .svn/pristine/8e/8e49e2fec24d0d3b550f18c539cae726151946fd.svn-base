<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <title>众彩物流</title>
    <meta http-equiv="content-type" content="text/html;charset=utf-8"/>
	<meta http-equiv="Cache-Control" content="no-store" />
	<meta http-equiv="Pragma" content="no-cache" />
	<meta http-equiv="Expires" content="0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <meta name="description" content="CISDIOA"/>
    <meta name="author" content="CISDIOA"/>
    <!-- Import resource file -->
    #parse(${resource_path})
</head>
<body>

<div style="overflow: auto">
    <div id="tb" class="top_search">
    	<form class="searchForm" id="searchForm" method="post">
    		<input type="hidden" name="adjustments.id" id="id" value="$!{adjustments.id}"/>
    		<div class="cell">
    			<table border="0" cellpadding="0" cellspacing="0">
					<tr>
                        <td>
							审核状态：
							<select name="audflag" id="audflag" style="width:100px;">
								<option value=" ">--请选择--</option>
								<option value="0">待提交</option>
								<option value="1">待审核</option>
								<option value="2">已审核</option>
								<option value="3">待处理</option>
							</select>
							单号：
							<input id="adjustment_id" name="adjustments.adjustment_id" type="text" class="easyui-textbox"/>
							审核人：
							<input id="auditor" name="adjustments.auditor" type="text" class="easyui-textbox"/>
							建表日期：
							<input id="createtime" name="adjustments.createtime_adj" type="text" class="easyui-datetimebox"/>
							<a href="#" class="easyui-linkbutton" data-options="iconCls:'icon-new-search'" onclick="searchAdjustment()" plain="true">查询</a>
							<a href="#" class="easyui-linkbutton" iconCls="icon-new-reduce" onclick="clearForm()" plain="true">清空</a>
						</td>
					 </tr>
    	       	</table>
    		</div>
    	</form>
		<a href="#" class="easyui-linkbutton" iconCls="icon-new-add" onclick="addAdjustment()" plain="true">新增</a>
		<a href="#" class="easyui-linkbutton" iconCls="icon-new-edit" onclick="editAdjustment()" plain="true">编辑</a>
		<a href="#" class="easyui-linkbutton" iconCls="icon-new-check" onclick="openCheck()" plain="true">审核</a>
		<a href="#" class="easyui-linkbutton" iconCls="icon-new-delete" onclick="deleteAdjustment()" plain="true">删除</a>
    </div>
    <table id="dg" width="100%"></table>
</div>

</body>
<script type="text/javascript" src="${rc.contextPath}/resources/js/basic/adjustment/adjustment.js"></script>
<script type="text/javascript">

	$(function(){
	
	//去除回车键
	document.onkeydown=function(evt){
		if(evt.keyCode ==13){
			return;
		}
	};
	
	var winHeight = $(window).height();
	$('#dg').datagrid({
		cache: false,
		title:'$!{title}', //标题
		method:'post',
		iconCls:'', //图标
		singleSelect:true, //多选
		height:winHeight, //高度
		fitColumns: true, //自动调整各列，用了这个属性，下面各列的宽度值就只是一个比例。
		striped: true, //奇偶行颜色不同
		remoteSort: false,
		url:"${rc.contextPath}/adjustment/adjustment/listGoodsAdjustment?time="+new Date(), //数据来源
		queryParams:{
			'adjustments.auditor':$('#auditor').val(),
			'adjustments.adjustment_id':$('#adjustment_id').val(),
			'adjustments.createtime_adj':$('#createtime').datetimebox('getValue'),
			'audflag':$('#audflag').val(),
		}, //查询条件
		pagination:true, //显示分页
		rownumbers:true, //显示行号
		pageSize:15,
		pageList:[15,20,30],
		columns:[[
			{field:'ck',checkbox:true,width:'2%',styler:function(value,rowData,rowIndex){
				return "height:30px;";
			}}, //显示复选框
			{field:'ID',sortable:true,sortable:true,hidden:true},
			{field:'ADJUSTMENT_ID',title:'单号',width:'30%',sortable:true,formatter:function(value,res){
				return "<a href='#' onclick=openAdjustmentsDetail('"+res.ID+"') ><span style='color:blue'>"+value+"</span></a>";
			}},
			{field:'AUDITOR',title:'审核人',width:'23%',sortable:true,sortable:true},
			{field:'CREATETIME',title:'创建日期',width:'23%',sortable:true,sortable:true,formatter:formatterCompleteDate},
			{field:'AUDFLAG',title:'审核状态',width:'23%',sortable:true,formatter:formatterStatus},
		]],
		toolbar:'#tb',
		onLoadSuccess:function(){
			$('#dg').datagrid('clearSelections'); //一定要加上这一句，要不然datagrid会记住之前的选择状态，删除时会出问题
		}
	});
	
});

$(window).resize(function(){
    $('#dg').datagrid('resize',{
    	width:'100%'
    });
});

//按条件查询
function searchAdjustment(){
	var queryParams={
			'adjustments.auditor':$('#auditor').val(),
			'adjustments.adjustment_id':$('#adjustment_id').val(),
			'adjustments.createtime_adj':$('#createtime').datetimebox('getValue'),
			'audflag':$('#audflag').val(),
	};
	$('#dg').datagrid('options').queryParams = queryParams;
	$("#dg").datagrid('load');
	
}

function clearForm(){
	 $("#createtime").datetimebox("setValue","");
	 $("#adjustment_id").textbox("setValue","");
	 $("#auditor").textbox("setValue","");
	 $("#audflag").textbox("setValue","");
	 searchData();
}

</script>
</html>