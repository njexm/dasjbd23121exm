<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <title>众彩物流</title>
    <meta http-equiv="content-type" content="text/html;charset=utf-8"/>
	<meta http-equiv="Cache-Control" content="no-store" />
	<meta http-equiv="Pragma" content="no-cache" />
	<meta http-equiv="Expires" content="0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <meta name="description" content="CISDIOA"/>
    <meta name="author" content="CISDIOA"/>
    <!-- Import resource file -->
    #parse(${resource_path})
</head>
<body>

<div style="overflow: auto">
    <div id="tb" class="">
    	<form class="baseform" id="baseform" method="post">
    			##<input type="hidden" name="goodsFile.id" id="id" value="$!{goodsFile.id}"/>
    			<input type="hidden" name="adjustments.id" id="adjustments_id" value="$!{adjustments.id}"/>
    			<input type="hidden" name="adjustmentdetail.id" id="adjustmentdetail_id" value="$!{adjustmentdetail.id}"/>
    		<div class="cell">
    			<table border="0" cellpadding="0" cellspacing="0">
				   <tr>
						<th style="width:11%">单号：</th>
                        <td style="width:22%">
							$!{adjustments.adjustment_id}
						</td>
						<th style="width:11%">制单人：</th>
						<td style="width:22%">
							$!{adjustments.maker.name}
						</td>
						<th style="width:11%">制单日期：</th>
						<td style="width:22%">
							$!{adjustments.createtime_adj}
						</td>
    	           </tr>
				   <tr>
						<th style="width:11%">审核人：</th>
                        <td style="width:22%">
							$!{adjustments.auditor}
						</td>
						<th style="width:11%">审核日期：</th>
						<td style="width:22%">
							$!{adjustments.effecttime}
                        </td>
						<th style="width:11%"></th>
                        <td style="width:22%">
                        </td>
    	           </tr>
				</table>
    		</div>
    	</form>
		<a href="#" class="easyui-linkbutton" iconCls="icon-new-edit" onclick="updateAdj()" plain="true">修改</a>
		<a href="#" class="easyui-linkbutton" iconCls="icon-new-check" onclick="updateAdjustments()" plain="true">提交审核</a>
		<a href="#" class="easyui-linkbutton" iconCls="icon-new-delete" onclick="deleteAdj()" plain="true">移除</a>
    </div>
    <table id="dg" width="100%"></table>
</div>

</body>
<script type="text/javascript" src="${rc.contextPath}/resources/js/basic/adjustment/adjustment.js"></script>
<script type="text/javascript">
	$(function(){

	$('#effecttime').val(formatterDate(new Date()));
	

	//去除回车键
	document.onkeydown=function(evt){
		if(evt.keyCode ==13){
			return;
		}
	};
	
	var winHeight = $(window).height();
	$('#dg').datagrid({
		cache: false,
		title:'编辑调价单', //标题
		method:'post',
		iconCls:'', //图标
		singleSelect:true, //多选
		height:winHeight, //高度
		fitColumns: true, //自动调整各列，用了这个属性，下面各列的宽度值就只是一个比例。
		striped: true, //奇偶行颜色不同
		remoteSort: false,
		url:"${rc.contextPath}/adjustment/adjustment/listGoodsAdjustmentCheck?time="+new Date(), //数据来源
		queryParams:{
			'adjustment.goods_name':$('#goods_name').val(),
			'adjustmentdetail.id':$('#adjustmentdetail_id').val(),
			'adjustments.id':$('#adjustments_id').val(),
		},
		pagination:true, //显示分页
		rownumbers:true, //显示行号
		pageSize:10,
		pageList:[10,15,20],
		columns:[[
			##{field:'ck',checkbox:true,width:'2%',styler:function(value,rowData,rowIndex){
			##	return "height:40px;";
			##}}, //显示复选框
			{field:'ID',sortable:true,sortable:true,hidden:true},
			{field:'SERIALNUMBER',title:'货号',width:'12%',align:'left',sortable:true,sortable:true},
			{field:'GOODS_NAME',title:'品名',width:'27%',align:'left',sortable:true,sortable:true},
			{field:'GOODS_UNIT',title:'单位',width:'5%',align:'left',sortable:true,sortable:true},
			{field:'GOODS_SPECIFICATIONS',title:'规格',width:'8%',align:'left',sortable:true,formatter:formatterGuige},
			{field:'GOODS_PURCHASE_PRICE',title:'原进价',formatter:formatterNumber,width:'8%',align:'right',sortable:true,sortable:true},
			{field:'GOODS_PURCHASE_PRICE_2',title:'现进价',formatter:formatterNumber,width:'8%',align:'right',sortable:true,sortable:true,editor:{type:'numberbox',options:{precision:2}}},
			{field:'LOWEST_PRICE',title:'原最低售价',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true},
			{field:'LOWEST_PRICE_2',title:'现最低售价',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true,editor:{type:'numberbox',options:{precision:2}}},
			{field:'WHOLESALE_PRICE',title:'原批发价',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true},
			{field:'WHOLESALE_PRICE_2',title:'现批发价',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true,editor:{type:'numberbox',options:{precision:2}}},
			{field:'GOODS_PRICE',title:'原零售价',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true},
			{field:'GOODS_PRICE_2',title:'现零售价',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true,editor:{type:'numberbox',options:{precision:2}}},
			{field:'DISTRIBUTION_PRICE',title:'原配送价',formatter:formatterNumber,width:'8%',align:'right',sortable:true,sortable:true},
			{field:'DISTRIBUTION_PRICE_2',title:'现配送价',formatter:formatterNumber,width:'8%',align:'right',sortable:true,sortable:true,editor:{type:'numberbox',options:{precision:2}}},
			{field:'MEMBER_PRICE',title:'原会员价1',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true},
			{field:'MEMBER_PRICE_2',title:'现会员价1',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true,editor:{type:'numberbox',options:{precision:2}}},
			{field:'WHOLESALE_PRICE2',title:'原批发价2',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true},
			{field:'WHOLESALE_PRICE2_2',title:'现批发价2',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true,editor:{type:'numberbox',options:{precision:2}}},
			{field:'WHOLESALE_PRICE3',title:'原批发价3',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true},
			{field:'WHOLESALE_PRICE3_2',title:'现批发价3',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true,editor:{type:'numberbox',options:{precision:2}}},
			{field:'WHOLESALE_PRICE4',title:'原批发价4',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true},
			{field:'WHOLESALE_PRICE4_2',title:'现批发价4',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true,editor:{type:'numberbox',options:{precision:2}}},
			{field:'WHOLESALE_PRICE5',title:'原批发价5',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true},
			{field:'WHOLESALE_PRICE5_2',title:'现批发价5',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true,editor:{type:'numberbox',options:{precision:2}}},
			{field:'WHOLESALE_PRICE6',title:'原批发价6',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true},
			{field:'WHOLESALE_PRICE6_2',title:'现批发价6',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true,editor:{type:'numberbox',options:{precision:2}}},
			{field:'WHOLESALE_PRICE7',title:'原批发价7',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true},
			{field:'WHOLESALE_PRICE7_2',title:'现批发价7',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true,editor:{type:'numberbox',options:{precision:2}}},
			{field:'WHOLESALE_PRICE8',title:'原批发价8',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true},
			{field:'WHOLESALE_PRICE8_2',title:'现批发价8',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true,editor:{type:'numberbox',options:{precision:2}}},
			{field:'MEMBER_PRICE2',title:'原会员价2',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true},
			{field:'MEMBER_PRICE2_2',title:'现会员价2',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true,editor:{type:'numberbox',options:{precision:2}}},
			{field:'MEMBER_PRICE3',title:'原会员价3',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true},
			{field:'MEMBER_PRICE3_2',title:'现会员价3',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true,editor:{type:'numberbox',options:{precision:2}}},
			{field:'MEMBER_PRICE4',title:'原会员价4',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true},
			{field:'MEMBER_PRICE4_2',title:'现会员价4',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true,editor:{type:'numberbox',options:{precision:2}}},
			{field:'MEMBER_PRICE5',title:'原会员价5',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true},
			{field:'MEMBER_PRICE5_2',title:'现会员价5',width:'8%',formatter:formatterNumber,align:'right',sortable:true,sortable:true,editor:{type:'numberbox',options:{precision:2}}},
			{field:'REMARK',title:'备注',width:'10%',align:'left',sortable:true,sortable:true},
		]],
		toolbar:'#tb',
		onLoadSuccess:function(data){
			for(var i = 0;i < data.rows.length;i++){
    			$('#dg').datagrid('beginEdit',i);
    		}
		}
	});
	
});

$(window).resize(function(){
    $('#dg').datagrid('resize',{
    	width:'100%'
    });
});


$('#branch_id').combobox({
		method:'POST',
        url:'${rc.contextPath}/settlement/branchAdvance/listJson',
        valueField:'ID',
        textField:'BRANCH_NAME'
	});
$('#goods_name').combobox({
		method:'POST',
        url:'${rc.contextPath}/adjustment/adjustment/ListJson_name',
        valueField:'ID',
        textField:'GOODS_NAME'
	});

</script>
</html>