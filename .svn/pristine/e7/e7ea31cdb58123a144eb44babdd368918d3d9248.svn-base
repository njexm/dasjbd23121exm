<script type="text/javascript" src="${rc.contextPath}/resources/js/warehouse/storechange.js/"></script>
<script type="text/javascript">
	$(function(){
	//去除回车键
	document.onkeydown=function(evt){
		if(evt.keyCode ==13){
			return;
		}
	};
	
	var winHeight = $(window).height();
	$('#dg').datagrid({
		cache: false,
		title:'$!{title}', //标题
		method:'post',
		iconCls:'icon-search', //图标
		singleSelect:true, //单选
		height:winHeight, //高度
		fitColumns: true, //自动调整各列，用了这个属性，下面各列的宽度值就只是一个比例。
		striped: true, //奇偶行颜色不同
		remoteSort: false,
		url:"${rc.contextPath}/storeChange/listJson?time="+new Date(), //数据来源
		queryParams:{
			}, //查询条件		
		pagination:true, //显示分页
		rownumbers:true, //显示行号
		pageSize:10,
		pageList:[10,15,20],
		columns:[[
			{field:'ck',checkbox:true,width:'2%',styler:function(value,rowData,rowIndex){
				return "height:40px;";
			}}, //显示复选框			
			{field:'ID',sortable:true,sortable:true,hidden:true},
			{field:'CHANGETYPE',sortable:true,sortable:true,hidden:true},
			{field:'STORECHANGE_NUMBER',title:'单据号',width:'20%',sortable:true,"formatter":function(value,res){
				return "<a href='#' onclick=opendetail('"+res.ID+"') ><span style='color:blue'>"+value+"</span></a>";
			}},	
			{field:'CHANGEAMOUNT',title:'调整总额',width:'8%',sortable:true,formatter:function(value,res){
				if(res.CHANGETYPE=='1'){
					return "<span style='color:red'>+"+formatterNumber(value)+"</span>";
				}else if(res.CHANGETYPE=='2'){
					return "<span style='color:green'>-"+formatterNumber(value)+"</span>";
				}
			}},
			{field:'BRANCH_CODE',title:'仓库编号',width:'8%',sortable:true},
			{field:'BRANCH_NAME',title:'仓库名称',width:'12%',sortable:true},
			{field:'USERNAME',title:'操作人员',width:'10%',sortable:true},
			{field:'CREATETIME',title:'操作时间',width:'15%',sortable:true,sortable:true,formatter:formatterCompleteDate},					
			{field:'STATUS',title:'状态',width:'8%',sortable:true,sortable:true,formatter:formatterStatus},
			{field:'STORE',title:'系统库存',width:'6%',sortable:true},
			{field:'REMARK',title:'备注',width:'10%',sortable:true,sortable:true}
		]],
		toolbar:'#tb',
		onLoadSuccess:function(){
			$('#dg').datagrid('clearSelections'); //一定要加上这一句，要不然datagrid会记住之前的选择状态，删除时会出问题
		}
	});
	
});

$(window).resize(function(){
    $('#dg').datagrid('resize',{
    	width:'100%'
    });
});
function searchData(value,name){	
	var queryParams = {
	};
	$('#dg').datagrid('options').queryParams = queryParams;
	$("#dg").datagrid('load');
}
</script>
<script type="text/javascript" src="js/jquery-1.7.2.min.js"></script>
<script type="text/javascript" src="jquery-easyui-1.4.2/jquery.easyui.min.js"></script>
</html>