	//	var row = $('#dg').datagrid('getSelected');
    //	if (row.length>0) {
    //         var rowIndex = $('#dg').datagrid('getRowIndex',row);
     //        $('#dg').datagrid('deleteRow',rowIndex);  
    //         $('#dg').datagrid('reload');
    //	}
	//};
	
	$('#provider').combobox({
		method:'POST',
        url:'${rc.contextPath}/provider/poviderinfo/listJson',
        valueField:'ID',
        textField:'PROVIDER_NICKNAME'
	});
</script>
</html>