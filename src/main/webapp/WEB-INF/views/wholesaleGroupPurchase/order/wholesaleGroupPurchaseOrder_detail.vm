<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <title>众彩物流</title>
    <meta http-equiv="content-type" content="text/html;charset=utf-8"/>
	<meta http-equiv="Cache-Control" content="no-store" />
	<meta http-equiv="Pragma" content="no-cache" />
	<meta http-equiv="Expires" content="0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <meta name="description" content="CISDIOA"/>
    <meta name="author" content="CISDIOA"/>
    <!-- Import resource file --> 
    #parse(${resource_path})
</head>
<body>

<div id="printPage" style="overflow: auto">
    <div id="tb" class="top_search">
    	<form class="searchForm" id="baseForm" method="post">
    		<div class="cell">
				<input type="hidden" name="orderId" id="orderId" value="$!{order.id}"/>
				<table border="0" cellpadding="0" cellspacing="0">
    	           <tr>
						<th style="width:11%">订单号：</th>
						<td style="width:22%">
							$!{order.orderNumber}
                        </td>
						<th style="width:11%">制单日期：</th>
						<td>
							$!{order.createTime}
                        </td>
						<th style="width:11%">制单人：</th>
						<td style="width:22%">
							$!{order.zcUserInfo.userName}
						</td>
    	           </tr>
				   <tr>
						<th style="width:11%">仓库：</th>
						<td style="width:22%">
							$!{order.branch.branch_name}
                        </td>
						<th style="width:11%">客户：</th>
						<td>
							$!{order.customerInfo.name}
                        </td>
						<th style="width:11%">付款方式：</th>
						<td style="width:22%" id="payType">
						</td>
    	           </tr>
				   <tr>
						<th style="width:11%">订单金额：</th>
						<td id="orderAmount">
                        </td>
						<th style="width:11%">订单状态：</th>
                        <td id="status">
						</td>
						<th style="width:11%"></span>审核人：</th>
                        <td style="width:20%">
							$!{order.checkMan}
						</td>
    	           </tr>
				   <tr>
						<th style="width:11%">审核日期：</th>
						<td>
							$!{order.checkDate}
						</td>
						<th style="width:11%">备注：</th>
						<td>
							$!{order.remark}
                        </td>
						<th style="width:11%">原因：</th>
						<td>
							$!{order.reason}
                        </td>
    	           </tr>
    	       	</table>
				<table border="0" cellpadding="0" cellspacing="0">
    	           <tr>
    	             <td width="20%" align="left" >
						货号：
						<input id="serialNumber" name="orderItem.goodsFile.serialNumber" type="text" class="easyui-textbox"/>
						<a href="javascript:void(0);" class="easyui-linkbutton" iconCls="icon-new-search" onclick="searchData()" plain="true">查询</a>
					 </td>
				   </tr>
    	       	</table>
    		</div>
    	</form>
		##<a href="#" class="easyui-linkbutton" iconCls="icon-new-print" onclick="previewPrint()" plain="true">打印预览</a>
    </div>
    <table id="dgDetail" width="100%"></table>
</div>
</body>
<div id="selectOptions" class="easyui-window" style="width:800px;height:450px;">
</div>
<div id="flt"  name="flt" style="right:1px; POSITION:absolute; top:10px; z-index:99;"></div>
<script type="text/javascript" src="${rc.contextPath}/resources/js/wholesaleGroupPurchase/order/wholesaleGroupPurchaseOrder.js"></script>
<script type="text/javascript">
$(function(){ 	
$('#selectOptions').window('close');
	var price = '$!{order.orderAmount}';
	var roundDigit = accuracy();
	var num =new Number(roundDigit);
	var money = new Number(price);
	$('#orderAmount').text(money.toFixed(num));

	var status='$!{order.status}';
	var newstatus=formatterStatusNoColour(status);
	$('#status').text(newstatus);
	if(status=='2'){
		$('#flt').append('<img src="${rc.contextPath}/resources/image/pass.png" >');
	}
});
	$(function(){
	
	//去除回车键
	document.onkeydown=function(evt){
		if(evt.keyCode ==13){
			searchData();
		}
	};
	
	var winHeight = $(window).height();
	$('#dgDetail').datagrid({
		cache: false,
		title:'商品列表', //标题
		method:'post',
		iconCls:'', //图标
		singleSelect:false, //多选
		height:winHeight, //高度
		fitColumns: true, //自动调整各列，用了这个属性，下面各列的宽度值就只是一个比例。
		striped: true, //奇偶行颜色不同
		remoteSort: false,
		url:"${rc.contextPath}/wholesaleGroupPurchase/order/listOrderItems?time="+new Date(), //数据来源
		queryParams:{
			'orderItem.orderId':$('#orderId').val()
		}, //查询条件
		pagination:true, //显示分页
		rownumbers:true, //显示行号
		pageSize:200,
		pageList:[200,300,500],
		columns:[[
			{field:'ID',sortable:true,sortable:true,hidden:true},
			{field:'SERIALNUMBER',title:'商品编号',width:'12%',sortable:true,align:'left'},
			{field:'GOODSNAME',title:'商品名',width:'30%',sortable:true,sortable:true,align:'left'},
			{field:'SPECIFICATIONS',title:'规格',width:'8%',sortable:true,sortable:true,align:'left',formatter:showGoods},
			{field:'UNIT',title:'单位',width:'8%',sortable:true,sortable:true,align:'left'},
			{field:'GOODSPRICE',title:'单价',width:'8%',sortable:true,sortable:true,formatter:formatterNumber,align:'right'},
			{field:'NUMS',title:'数量',width:'9%',align:'right',sortable:true,formatter:formatterNumber},
			{field:'RATE',title:'税率',width:'8%',sortable:true,formatter:formatterNumber,align:'right'},
			{field:'RATEAMOUNT',title:'税额',width:'8%',sortable:true,sortable:true,formatter:formatterNumber,align:'right'},
			{field:'PRICESUM',title:'小计金额',width:'8%',sortable:true,sortable:true,formatter:formatterNumber,align:'right'}
			
		]],
		toolbar:'#tb',
		onLoadSuccess:function(data){
			$('#dgDetail').datagrid('clearSelections');
		}
	});
	
});

function searchData(){
	var queryParams = {
		'orderItem.goodsFile.serialNumber':$('#serialNumber').val(),
		'orderItem.orderId':$('#orderId').val()
	};
	$('#dgDetail').datagrid('options').queryParams = queryParams;
	$("#dgDetail").datagrid('load');
}

$(window).resize(function(){
    $('#dgDetail').datagrid('resize',{
    	width:'100%'
    });
});
</script>
</html>